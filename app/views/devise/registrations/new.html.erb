<%= render "devise/shared/layout", title: "Create an account" do %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="form-group">
      <div class="form-group-header">
        <%= f.label :name %>
      </div>

      <div class="form-group-body">
        <%= f.text_field :name,
          class: "form-control form-control-large width-full",
          autofocus: true,
          autocomplete: "name",
          required: true %>

        <%= render "devise/shared/form_error", error_type: :first_name %>
      </div>
    </div>

    <div class="form-group">
      <div class="form-group-header">
        <%= f.label :email %>
      </div>

      <div class="form-group-body">
        <%= f.email_field :email,
          class: "form-control form-control-large width-full",
          autocomplete: "email",
          required: true %>

        <%= render "devise/shared/form_error", error_type: :email %>
      </div>
    </div>

    <div class="form-group">
      <div class="form-group-header d-flex flex-items-center">
        <%= f.label :password %>

        <% if @minimum_password_length %>
          <span class="ml-1">(min. <%= @minimum_password_length %> characters)</span>
        <% end %>
      </div>

      <div class="form-group-body">
        <%= f.password_field :password,
          class: "form-control form-control-large width-full",
          autocomplete: "new-password",
          required: true %>

        <%= render "devise/shared/form_error", error_type: :password %>
      </div>
    </div>

    <%= f.submit "Sign up", class: "btn btn-primary btn-large btn-block" %>
  <% end %>

  <%= content_for(:footer) do %>
    <p class="text-center mt-4">
      Already have an account? <%= render "devise/shared/links" %>
    </p>
  <% end %>
<% end %>
