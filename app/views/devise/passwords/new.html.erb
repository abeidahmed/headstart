<%= render "devise/shared/layout", title: "Forgot your password?" do %>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <div class="form-group">
      <div class="form-group-header">
        <%= f.label :email %>
      </div>

      <div class="form-group-body">
        <%= f.email_field :email,
          class: "form-control form-control-large width-full",
          autofocus: true,
          autocomplete: "email",
          required: true %>

        <%= render "devise/shared/form_error", error_type: :email %>
      </div>
    </div>

    <%= f.submit "Send me reset password instructions", class: "btn btn-primary btn-large btn-block" %>
  <% end %>

  <%= content_for(:footer) do %>
    <p class="text-center mt-4">
      Nevermind, <%= link_to "go back to login", new_session_path(resource_name) %>
    </p>
  <% end %>
<% end %>
