<%= render "devise/shared/layout", title: "Resend unlock instructions" do %>
  <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
    <div class="form-group">
      <div class="form-group-header">
        <%= f.label :email %>
      </div>

      <div class="form-group-body">
        <%= f.email_field :email,
          class: "form-control form-control-large width-full",
          autofocus: true,
          autocomplete: "email" %>

        <%= render "devise/shared/form_error", error_type: :email %>
      </div>
    </div>

    <%= f.submit "Resend unlock instructions", class: "btn btn-large btn-primary btn-block" %>
  <% end %>

  <%= content_for(:footer) do %>
    <%= render "devise/shared/links" %>
  <% end %>
<% end %>
